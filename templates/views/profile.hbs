<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerLink}}
</head>
<body>
    {{>navbar}}
    <div class="container">
        <div class="row">   
            <div class="col-md-3"></div>
            <div class="col-md col-12"> 
                <div class="card mt-3">
                    <div class="card-body text-center">    
                        <div class="form-group">
                            <img src="/{{userData.profile.imgname}}" alt="profile-image" height="50%" width="50%">
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4">First Name :</label>
                            <p class="col-md-8">{{userData.firstname}}</p>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4">Last Name :</label>
                            <p class="col-md-8">{{userData.lastname}}</p>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4">Email :</label>
                            <p class="col-md-8">{{userData.email}}</p>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4">Phone :</label>
                            <p class="col-md-8">{{userData.phone}}</p>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4">Gender :</label>
                            <p class="col-md-8">{{userData.gender}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    {{>footer}}
    {{>footerLink}}
</body>
</body>
</html>