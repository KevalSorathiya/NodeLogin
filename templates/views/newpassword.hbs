<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerLink}}
</head>
<body>
    {{>navbar}}
    <div class="row home mr-0">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card mt-3">
                <div class="card-body">
                    <p class="title text-center">Reset Password Form</p>
                    <form action="/updatepassword" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="token" value="{{token}}">
                    </div>
                     <div class="form-group">
                        <label for="newpassword">New Password :</label>
                         <input class="form-control" type="password" name="newpassword" id="newpassword" placeholder="Enter Your New Password :">
                    </div>
                    <div class="form-group">
                        <label for="confirmpassword">Confirm Password :</label>
                         <input class="form-control" type="password" name="confirmpassword" id="confirmpassword" placeholder="Enter Your Confirm Password :">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-danger" onclick="cancel()">
                            Cancel
                        </button>
                    </div>
                    </form>
                </div>
            </div>
            </div>
        <div class="col-md-4"></div>
    </div>
    {{>footer}}
    {{>footerLink}}
</body>
</body>